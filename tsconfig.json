{
    "compilerOptions": {
        "baseUrl": "./src",
        "moduleResolution": "node",
        "outDir": "./built",
        "target": "es6",
        "composite": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true
    },
    "exclude": ["node_modules", "lib", "built"]
}
