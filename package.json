{
    "name": "webpack-compiler-plugin",
    "version": "0.0.1",
    "description": "Easily listen to webpack compiler hooks and execute commands on events",
    "author": "iamgbz",
    "repository": {
        "type": "git",
        "url": "https://github.com/iamgbz/webpack-compiler-plugin"
    },
    "bugs": {
        "url": "https://github.com/iamgbz/webpack-compiler-plugin/issues"
    },
    "homepage": "https://github.com/iamgbz/webpack-compiler-plugin#readme",
    "license": "GPL-3.0",
    "keywords": [
        "compile",
        "plugin",
        "shell",
        "webpack"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "main": "index.js",
    "scripts": {
        "lint": "eslint . --ext .js,.ts",
        "commitlint": "commitlint-travis",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development --watch",
        "test": "jest",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "typecheck": "tsc --noEmit",
        "commit": "git-cz",
        "release": "semantic-release"
    },
    "release": {
        "dryRun": true,
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/github"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,ts}": [
                "npm run lint",
                "npm test -- --bail --findRelatedTests"
            ]
        },
        "ignore": [
            "**/lib/*"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.3.4",
        "@babel/preset-env": "^7.4.4",
        "@babel/preset-typescript": "^7.3.3",
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@commitlint/travis-cli": "^8.0.0",
        "@types/chrome": "0.0.81",
        "@types/copy-webpack-plugin": "^4.4.3",
        "@types/jest": "^24.0.9",
        "@types/node": "^11.9.5",
        "@types/source-map": "^0.5.2",
        "@types/webpack": "^4.4.25",
        "@typescript-eslint/eslint-plugin": "^1.11.0",
        "@typescript-eslint/parser": "^1.11.0",
        "acorn": "^6.1.1",
        "babel-loader": "^8.0.5",
        "babel-runtime": "^6.26.0",
        "commitizen": "^3.0.7",
        "coveralls": "^3.0.3",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^6.0.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.2",
        "husky": "^2.1.0",
        "jest": "^24.1.0",
        "lint-staged": "^8.1.4",
        "prettier": "^1.16.4",
        "prettier-eslint": "^8.8.2",
        "rxjs": "^6.4.0",
        "semantic-release": "^15.13.3",
        "stylelint": "^10.0.0",
        "stylelint-config-standard": "^18.3.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.6.0",
        "ts-jest": "^24.0.0",
        "ts-node": "^8.0.2",
        "typescript": "^3.4.5",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3"
    }
}
